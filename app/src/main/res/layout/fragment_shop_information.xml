<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ShopInformation">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/idTVHead"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:padding="4dp"
            android:text="Shop Information"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:scaleType="center"
            android:layout_marginTop="30dp"
            android:id="@+id/idIVShop"
            android:src="@drawable/acc_image_icon" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="4dp"
            android:gravity="center"
            android:padding="3dp"
            android:text="Cover Photo\nPicture"
            android:textColor="@color/black" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="4dp"
            android:padding="3dp"
            android:textSize="18sp"
            android:text="Shop Name"
            android:textColor="@color/black" />

        <EditText
            android:id="@+id/idEdtShopName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:textSize="15sp"
            android:layout_marginLeft="12dp"
            android:hint="Shop Name" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="20dp"
            android:padding="3dp"
            android:textSize="18sp"
            android:text="Shop Address"
            android:textColor="@color/black" />

        <EditText
            android:id="@+id/idEdtShopAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:textSize="15sp"
            android:layout_marginLeft="12dp"
            android:hint="Shop Address" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="20dp"
            android:padding="3dp"
            android:textSize="18sp"
            android:text="Shop Map Pin"
            android:textColor="@color/black" />

        <EditText
            android:id="@+id/idEdtPin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:textSize="15sp"
            android:layout_marginLeft="12dp"
            android:hint="Shop Pin" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="20dp"
            android:padding="3dp"
            android:textSize="18sp"
            android:text="City"
            android:textColor="@color/black" />

        <EditText
            android:id="@+id/idEdtShopCity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:textSize="15sp"
            android:layout_marginLeft="12dp"
            android:hint="City" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="20dp"
            android:padding="3dp"
            android:textSize="18sp"
            android:text="Shop Category"
            android:textColor="@color/black" />

        <EditText
            android:id="@+id/idEdtShopCategory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:textSize="15sp"
            android:layout_marginLeft="12dp"
            android:hint="Category" />

        <Button
            android:id="@+id/idBtnShopData"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/button_back"
            android:paddingStart="18dp"
            android:paddingEnd="18dp"
            android:text="Add Shop Data"
            android:textAllCaps="false"
            android:textSize="12sp"
            tools:targetApi="lollipop" />

    </LinearLayout>



</ScrollView>