<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeFragment">


    <EditText
        android:id="@+id/idEdtSearch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/search_back"
        android:drawableStart="@drawable/ic_search"
        android:drawableLeft="@drawable/ic_search"
        android:focusable="auto"
        android:hint="Search"
        android:padding="7dp"
        android:textSize="12sp" />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/idRVImages"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/idEdtSearch"
        android:layout_marginTop="5dp" />

    <TextView
        android:id="@+id/idTVHead"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/idRVImages"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:padding="4dp"
        android:text="Received Payments"
        android:textColor="@color/black"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/idtvsubhead"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/idTVHead"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:padding="4dp"
        android:text="This Week"
        android:textColor="@color/black"
        android:textSize="13sp" />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/idRvUsers"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/idtvsubhead"
        android:layout_marginTop="5dp" />


    <Button
        android:id="@+id/idBtnGetOTP"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/button_back"
        android:paddingStart="18dp"
        android:paddingEnd="18dp"
        android:text="See All"
        android:textAllCaps="false"
        android:textSize="12sp"
        tools:targetApi="lollipop" />

</RelativeLayout>